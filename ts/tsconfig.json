{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es7",
      "dom"
    ],
    "types": [
      "node",
      "mocha"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.fixture.ts"
  ]
}
